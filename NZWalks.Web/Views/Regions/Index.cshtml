@model IEnumerable<NZWalks.Model.Models.DTOs.RegionDTO>

<h1 class="mt-3">Regions</h1>

<div class="mt-3">
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" asp-controller="Regions" asp-action="Add">Add Region</a>
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </thead>
</table>